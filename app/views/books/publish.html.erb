<p id="notice"><%= notice %></p>

<h1>Books</h1>
<% if admin_signed_in? %>
  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
<% else %>
  <%= link_to "ログイン", new_admin_session_path, class: 'post' %> 
  <%= link_to "新規登録", new_admin_registration_path, class: 'post' %>
<% end %>
  


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th>Description</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books_publish.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.user.name %></td>
        <td><%= link_to 'Show', user_book_path(@user, book) %></td>
        <td><%= link_to 'Edit', edit_user_book_path(@user, book) %></td>
        <td><%= link_to 'Destroy', user_book_path(@user, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>